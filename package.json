{
  "name": "proshop-v2",
  "version": "1.0.0",
  "description": "eCommerce application built with the MERN stack",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node --watch backend/server.js",
    "server": "node backend/server.js",
    "client": "npm run dev --prefix frontend",
    "dev": "concurrently \"npm run start\" \"npm run client\"",
    "data:import": "node backend/seeder.js",
    "data:destroyinstall &&npm install --prefix frontend&& npm run build --prefix frontend": "node backend/seeder.js -d",
    "build": "npm install &&npm install --prefix frontend&& npm run build --prefix frontend"
  },
  "author": "Mika Kaakinen",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "eslint": "^9.36.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.2",
    "multer": "^2.0.2"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.2"
  }
}
